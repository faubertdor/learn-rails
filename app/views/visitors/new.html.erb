<% provide(:title, "Home | Jean F. Dorancy") %>
<% provide(:description, "This is an example mailing") %>
<section>
  <%= image_tag "http://lorempixel.com/1170/600/nightlife/1", size: "600X150" %>
</section>
<section>
  <div class="column">
    <h2>Stay in touch with us!</h2>
  </div>
  <div class="column">
    <div class="form-centered">
      <%= simple_form_for @visitor do |f| %>
        <%= f.error_notification %>
        <%= f.input :email, label: false, placeholder: "Your email address..." %>
        <%= f.button :submit, "Sign up now!", class: "submit" %>
      <% end %>
    </div>
  </div>
</section>